<service_bundle type='manifest' name='mysql'>

<service
        name='application/database/mysql_56'
        type='service'
        version='1'>

	<!--
	   Wait for network interfaces to be initialized.
	-->
        <dependency
                name='network'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/milestone/network:default' />
        </dependency> 

	<!--
	   Wait for all local filesystems to be mounted.
	-->
        <dependency
                name='filesystem-local'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/system/filesystem/local:default' />
        </dependency> 

        <exec_method
                type='method'
                name='start'
                exec='/lib/svc/method/mysql_56 start'
                timeout_seconds='60' />


        <exec_method
                type='method'
                name='stop'
                exec='/lib/svc/method/mysql_56 stop'
                timeout_seconds='60' />




        <instance name='version_56' enabled='false'>

        	<method_context working_directory='/var/mysql'>
                	<method_credential user='mysql' group='mysql' />
        	</method_context>

        	<property_group  name='mysql' type='application'>
                	<propval name='bin' type='astring'
                    	   value='/usr/mysql/5.6/bin' />
                	<propval name='data' type='astring'
                    	   value='/var/mysql/5.6/data' />
                        <propval name='value_authorization' type='astring'
                           value='solaris.smf.value.mysql/version_56' /> 
                        <propval name='action_authorization' type='astring'
                           value='solaris.smf.manage.mysql/version_56' />
			<propval name='enable_64bit' type='boolean' value='false' />
        	</property_group>

                <property_group name='general' type='framework'>
                        <propval name='action_authorization' type='astring' value='solaris.smf.manage.mysql/version_56' />
                        <propval name='value_authorization' type='astring' value='solaris.smf.value.mysql/version_56' />
                </property_group>
          </instance>

        <stability value='Evolving' />

        <template>
                <common_name>
                        <loctext xml:lang='C'>
                                MySQL RDBMS
                        </loctext>
                </common_name>
                <documentation>
                        <manpage title='MySQL 5.6.24' section='1' />
                        <doc_link name='mysql.com'
                                uri='http://dev.mysql.com/doc' />
                </documentation>
        </template>

</service>

</service_bundle>

